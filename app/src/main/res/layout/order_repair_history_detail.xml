<?xml version="1.0" encoding="utf-8"?>
<!--
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_repair_history_detail"-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@mipmap/repair_title_person" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备维修"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_centerVertical="true"
                android:textColor="#3f67f4"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/state"
                android:text="维修状态："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="已受理"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/repair"
                android:text="维修类型："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="水管"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/dormitory3"
                android:layout_marginLeft="10dp"
                android:text="宿舍地址："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="6601"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/phone2"
                android:text="联系人："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="陈先生"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/person"
                android:text="联系电话："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="13533169284"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/clock"
                android:text="可维修时段："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_repair_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="14:30"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/description"
                android:text="维修描述："
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#3f67f4"
                android:textSize="18sp"
                android:text="水管爆破"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_repair_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/upload_photo" />
    </LinearLayout>
</ScrollView>

