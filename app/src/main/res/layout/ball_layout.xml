<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--必须是相对布局 等下在DormitoryActivity中才可以layoutParams.leftMargin = locationX;-->
    <ImageView
        android:id="@+id/iv_phone_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/my_m"
        />
    <ImageView
        android:id="@+id/iv_qq_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/my_m"
        />
    <ImageView
        android:id="@+id/iv_ball"
        android:background="@mipmap/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_phone_bellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/my_m"
        />
    <ImageView
        android:id="@+id/iv_qq_bellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@mipmap/my_m"
        />
</LinearLayout>
