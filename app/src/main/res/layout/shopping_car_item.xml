<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<TextView
    android:id="@+id/tv_good_name"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:textSize="18sp"
    android:layout_centerVertical="true"
    android:text="景湖冰泉"/>
    <TextView
        android:id="@+id/tv_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 7.9"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:textColor="#3f67f4"
        />
    <ImageView
        android:id="@+id/iv_good_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/button_add"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_good_add"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="2"/>
    <ImageView
        android:id="@+id/iv_good_minus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/tv_good_count"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/button_minus"/>
</RelativeLayout>
