<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/head_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/boy" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="说不出来的忧伤"
            android:textColor="#99a24700"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_clear_selector"
        android:text="点击保存"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textColor="#99a24700"/>
</RelativeLayout>



        <RelativeLayout style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_phone_number"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/phone2" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_phone_number"
                android:text="手机号码" />

            <TextView
                android:id="@+id/tv_user_phone_number"
                style="@style/PersonInfoTheme_Right"
                android:text="00000000000" />
        </RelativeLayout>

        <RelativeLayout style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_money"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/money" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_money"
                android:text="余额" />

            <TextView
                android:id="@+id/tv_user_money"
                style="@style/PersonInfoTheme_Right"
                android:text="0.0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ssl"
            style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_ssl"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/dormitory3" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_ssl"
                android:text="宿舍楼" />

            <TextView
                android:id="@+id/tv_user_dormitory"
                style="@style/PersonInfoTheme_SS"
                android:layout_toLeftOf="@+id/right_iv_ssl"
                android:text="A栋" />

            <ImageView
                android:id="@+id/right_iv_ssl"
                style="@style/PersonInfoTheme_RightImageView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lc"
            style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_lc"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/floor" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_lc"
                android:text="楼层" />

            <TextView
                android:id="@+id/tv_user_floor"
                style="@style/PersonInfoTheme_SS"
                android:layout_toLeftOf="@+id/right_iv_lc"
                android:text="1楼" />

            <ImageView
                android:id="@+id/right_iv_lc"
                style="@style/PersonInfoTheme_RightImageView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ssh"
            style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_ssh"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/dorm_number" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_ssh"
                android:text="宿舍号" />

            <TextView
                android:id="@+id/tv_user_dorm_number"
                style="@style/PersonInfoTheme_SS"
                android:layout_toLeftOf="@+id/right_iv_ssh"
                android:text="101" />

            <ImageView
                android:id="@+id/right_iv_ssh"
                style="@style/PersonInfoTheme_RightImageView" />
        </RelativeLayout>

        <RelativeLayout style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_service_qq"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/qq" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_service_qq"
                android:text="客服QQ" />

            <TextView
                android:id="@+id/tv_service_qq"
                style="@style/PersonInfoTheme_Right"
                android:text="1611205417" />
        </RelativeLayout>

        <RelativeLayout style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_service_phone"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/phonenumber" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_service_phone"
                android:text="客服电话" />

            <TextView
                android:id="@+id/tv_service_phone"
                style="@style/PersonInfoTheme_Right"
                android:text="13533169284" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yjfk"
            style="@style/PersonInfoTheme_RelativeLayout">

            <ImageView
                android:id="@+id/iv_yjfk"
                style="@style/PersonInfoTheme_ImageView"
                android:src="@mipmap/yjfk" />

            <TextView
                style="@style/PersonInfoTheme_Left"
                android:layout_toRightOf="@id/iv_yjfk"
                android:text="意见反馈" />

            <ImageView style="@style/PersonInfoTheme_RightImageView" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_cancle_selector"
                android:text="退出登录" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
