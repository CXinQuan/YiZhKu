<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_water_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/water_normal"/>

    <TextView
        android:id="@+id/tv_water_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_water_picture"
        android:text="景湖冰泉"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_water_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_water_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_water_picture"
        android:text="规格：18.9L" />
    <TextView
        android:id="@+id/tv_water_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_water_capacity"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="￥ 7.0"
        android:textColor="#9f00"
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_water_picture"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        >
    <ImageView
        android:id="@+id/iv_minus_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:src="@mipmap/button_minus" />
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="0"
        android:textSize="20sp"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/iv_add_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/button_add" />
    </LinearLayout>
</RelativeLayout>
